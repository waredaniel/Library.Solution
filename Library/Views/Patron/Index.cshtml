@{
  Layout = "_Layout";
}

@using Library.Models;

<h1> Library Patrons</h1>

@if (@Model.Count == 0)
{
  <h3> No one has joined our library yet !</h3>
} 

<ul>
  @foreach(Patron patron in Model)
  {
    <li>@Html.ActionLink($"{patron.Name}", "Details", new { id = patron.PatronId })</li>
  }
</ul>

<p>@Html.ActionLink("Create Patron","Create","Patron")</p>
