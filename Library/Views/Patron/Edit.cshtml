@{
  Layout = "_Layout";
}

@model Library.Models.Patron

<h2>Edit</h2>

<h4>Edit this Patron: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.PatronId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.PhoneNumber)
  @Html.EditorFor(model => model.PhoneNumber)

  @Html.LabelFor(model => model.DateJoined)
  @Html.EditorFor(model=> model.DateJoined)


  <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to Patrons list", "Index")</p>