@{
  Layout = "_Layout";
  var roleId = ViewBag.roleId;
}

@using Library.ViewModels
@using System.Collections.Generic
@model List<UserRoleViewModel> 

@using (@Html.BeginForm())
{
  <div>
    <h3>Add or remove users from this role</h3>
  </div>

  <div>
    @for (int i = 0; i < Model.Count; i++)
    {
      <div>
        @Html.HiddenFor(m => m[i].UserId)
        @Html.HiddenFor(m => m[i].UserName)
        @Html.CheckBoxFor(m => m[i].IsSelected)
        <label for="@Model[i].IsSelected" class="form-check-label">
          @Model[i].UserName
        </label>
      </div>
    }
  </div>

  <input type="submit" value="Update" class="btn btn-dark" />
}

<hr />
<p>@Html.ActionLink("Cancel", "EditRoles", new { id = roleId })</p>
<p>@Html.ActionLink("Back to List", "ListRoles")</p>